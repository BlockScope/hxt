HXTPACKAGES	= hxt hxt-xslt hxt-filter hxt-binary hxt-cache

all	:
	$(MAKE) untar
	$(MAKE) build

untar	:
	$(foreach i, $(HXTPACKAGES), tar xvzf $(wildcard $i-[0-9]*.tar.gz) ; )

build	:
	$(foreach i, $(HXTPACKAGES), ( cd $(wildcard $i-[0-9]*[0-9]) && cabal configure && cabal build; ); )

.PHONY	: all unpack build
