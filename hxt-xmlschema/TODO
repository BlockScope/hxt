Wrapper für Annotations (Funktor):
data Annotation a = Ann { c   :: a
                          ann :: Maybe XmlTree
                        }

type AnnotatedValue = Annotation Value

class Funktor f where
fmap :: (a -> b) -> f a -> f b

instance Funktor [] where
fmap = map

map :: (a -> b) -> [a] -> [b]
